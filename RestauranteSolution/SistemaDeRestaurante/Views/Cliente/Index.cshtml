@model List<ProdutoModel>

@{
    ViewData["Title"] = "Página do Cliente";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Produtos</th>
            <th scope="col">Preço</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Preco</td>
                <td><a asp-action="AdicionarAoCarrinho" role="button" class="btn btn-group btn-danger" asp-route-id="@item.ID">Adicionar Ao Carrinho</a></td>
            </tr>
        }
    </tbody>
</table>
