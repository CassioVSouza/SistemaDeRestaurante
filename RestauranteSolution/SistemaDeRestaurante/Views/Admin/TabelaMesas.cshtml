@model List<MesaModel>

@{
    ViewData["Title"] = "Lista de Mesas";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Mesas</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td><a asp-action="DeletarMesa" role="button" class="btn btn-group btn-danger" asp-route-id="@item.Id">Deletar</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" role="button" class="btn btn-group btn-secondary">Voltar</a>