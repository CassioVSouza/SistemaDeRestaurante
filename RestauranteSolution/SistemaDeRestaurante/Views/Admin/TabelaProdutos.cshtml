@model List<ProdutoModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Produtos</th>
            <th scope="col">Preço</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Preco</td>
                <td><a asp-action="DeletarProduto" role="button" class="btn btn-group btn-danger" asp-route-id="@item.ID">Deletar</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" role="button" class="btn btn-group btn-secondary">Voltar</a>