
@model List<ProdutosModel>

<h1>Lista de Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Preco</td>
                <td><a asp-action="DeletarProdutos" asp-route-id="@item.ID" class="btn btn-group btn-danger">Deletar</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-group btn-primary" role="button" asp-action="Index">Voltar</a>