@model PedidosModel

<h1>Lista de Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produtos)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Preco</td>
                <td><a asp-action="RemoverDoCarrinho" asp-route-id="@item.ID" class="btn btn-group btn-danger">Remover do Carrinho</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="FinalizarPedido" class="btn btn-group btn-primary">Finalizar Pedido</a>